    <div class="row">
        <div class="col d-flex justify-content-center">
            <div class="card text-bg-light">
                <div class="card-body">
                    <h3>Registro de usuario</h3>
                    <form autocomplete="off" id="signupForm" method="POST" enctype="multipart/form-data">
                        {{> user-basic-form }}
                        <div class="row">
                            <div class="col-md-6 mt-3">
                                <div class="form-group">
                                    <label for="profileImage" class="form-label">Seleccione una imagen para su perfil:</label>
                                    <input class="form-control" type="file" id="profileImage" name="profileImage" />
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                            <div class="col-md-6 mt-3">
                                <div class="form-group">
                                    <label for="passwd" class="form-label">Ingrese su contrase√±a:</label>
                                    <input class="form-control" type="password" id="passwd" name="passwd" />
                                    <div class="invalid-feedback"></div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col">
                                <div class="form-group d-flex justify-content-center">
                                    <button class="btn btn-success btn-lg" type="submit" id="btnSignup" />
                                        Registrar
                                    </button>
                                </div>
                            </div>
                        </div>
                        <hr>
                        <div class="row mt-3">
                            <div class="col">
                                <div class="form-group">
                                    <a class="btn btn-secondary" href="/login"/>Ir a Login</a>
                                </div>
                            </div>
                        </div>
                    </form>                  
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.8/js/intlTelInput.min.js"></script>
    <script src="/js/utils.js"></script>
    <script src="/js/signup.js"></script>